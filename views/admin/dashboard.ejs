<div class="admin-title">
  <h2>Dashboard</h2>
  <a href="/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(assignment => { %>

  <li>
    <div>
      <a href="/post/<%= assignment.title %>">
        <%= assignment.title %> &nearr;
      </a>
      <p><%= assignment.body %></p>
    </div>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= assignment.title %>" class="btn">Edit</a>

      <form
        action="/delete-post/<%= assignment.title %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn-delete btn" />
      </form>
    </div>
  </li>

  <% }) %>
</ul>
